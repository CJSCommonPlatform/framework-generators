{
  "$id": "http://example.com/example.json",
  "type": "object",
  "definitions": {},
  "$schema": "http://json-schema.org/draft-04/schema#",
  "properties": {
    "unified_search_descriptor": {
      "$id": "/properties/unified_search_descriptor",
      "type": "object",
      "properties": {
        "name": {
          "$id": "/properties/unified_search_descriptor/properties/name",
          "type": "string",
          "title": "The Spec_version Schema ",
          "examples": [
            "example"
          ]
        },
        "spec_version": {
          "$id": "/properties/unified_search_descriptor/properties/spec_version",
          "type": "string",
          "title": "The Spec_version Schema ",
          "examples": [
            "1.0.0"
          ]
        },
        "service": {
          "$id": "/properties/unified_search_descriptor/properties/service",
          "type": "string",
          "title": "The Service Schema ",
          "examples": [
            "examplecontext"
          ]
        },
        "service_component": {
          "$id": "/properties/unified_search_descriptor/properties/service_component",
          "type": "string",
          "title": "The Service_component Schema ",
          "examples": [
            "EVENT_LISTENER"
          ]
        },
        "events": {
          "$id": "/properties/unified_search_descriptor/properties/events",
          "type": "array",
          "items": {
            "$id": "/properties/unified_search_descriptor/properties/events",
            "type": "object",
            "properties": {
              "name": {
                "$id": "/properties/unified_search_descriptor/properties/events/items/properties/name",
                "type": "string",
                "title": "The Name Schema ",
                "examples": [
                  "example.recipe-added"
                ]
              },
              "transformer_config": {
                "$id": "/properties/unified_search_descriptor/properties/events/items/properties/tra",
                "type": "string",
                "title": "The Transformed json schema_uri  ",
                "examples": [
                  "file location"
                ]
              },
              "index_name": {
                "$id": "/properties/unified_search_descriptor/properties/events/items/properties/index_name",
                "type": "string",
                "title": "Index name",
                "examples": [
                  "case_details"
                ]
              }
            },
            "required": [
              "name",
              "transformer_config",
              "index_name"
            ]
          }
        }
      },
      "required": [
        "name",
        "spec_version",
        "service",
        "service_component",
        "events"
      ]
    }
  },
  "required": [
    "unified_search_descriptor"
  ]
}

